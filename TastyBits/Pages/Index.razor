@using TastyBits.Components;
@page "/"

<!--Hero landing section-->
<TastyHero Class="mt-32"></TastyHero>


<!--Card info section-->
<div class="flex flex-col mt-52">
    <div class="flex justify-center">
        <p class="text-6xl font-bold text-emerald-700 text-center">We help choose your favorites</p>
    </div>
    <div class="flex flex-col lg:flex-row gap-7 mt-24">
        <TastyCard CardTitle="Log & Track known recipes" CardBodyImgPath="pics/search.png" CardFooterContent="Search whats available"></TastyCard>
        <TastyCard CardTitle="Add personal recipes" CardBodyImgPath="pics/food-heart.png" CardFooterContent="Create your own"></TastyCard>
        <TastyCard CardTitle="Simplicity first" CardBodyImgPath="pics/easy.png" CardFooterContent="No ads, no flash"></TastyCard>
    </div>
</div>

<!--Columns section-->
<TastyColumn Class="mt-44"></TastyColumn>

<TastySeparator></TastySeparator>

<!--Testimony section--->
<div class="flex justify-center mx-10 relative">
    <div class="flex w-3/4 gap-6">
        <div id="leftTesti" class="w-3/4 flex flex-col p-5 mt-10">
            <p class="text-6xl font-bold text-emerald-700 leading-none">Our users love what we do and how we do it.</p>
            <p class="text-2xl mt-10 leading-relaxed">Dive in the experience of our users. Find something for yourself, organize your meals,
                <span class="underline-offset-1 decoration-emerald-700">know what you eat every day.</span>
            </p>
        </div>
        <div class="flex flex-col justify-center">
            <div class="bg-emerald-700 text-transparent rounded-xl h-64 w-2 opacity-50">-----</div>
        </div>
        <div id="rightTesti" class="flex flex-col space-y-7 ml-3">
            <TestimonyCard Author="Someone" Quote="Best dinner ideas are here."></TestimonyCard>
            <TestimonyCard Author="The Wife" Quote="I dont have to wonder anymore what my husband will cook. With Tasty, I already know ;)"></TestimonyCard>
            <TestimonyCard Author="Mike" Quote="I've always had my meals large. On Tasty I have found meals to be the perfect size. Helps with the weight too"></TestimonyCard>
        </div>
    </div>
</div>

<!--Try It Demo-->
<div class="flex justify-end h-36 mt-44">
    <div class="relative top-14 w-[650px] h-[550px] mr-52">
        <img src="pics/tasty-page-comp.png" alt="tastyweb" />
    </div>
</div>

<div>
    <TastyTryIt></TastyTryIt>
    <TastyFooter></TastyFooter>
</div>

