@page
@model TastyBits.Areas.Identity.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Areas/Identity/Pages/_IdentityLayout.cshtml";
}

<div class="flex flex-col p-5 border-2 m-auto space-y-5">
    <form id="loginForm" method="post">
        <div class="bg-emerald-700 text-gray-50 flex justify-center">
            <p>TASTY LOGIN</p>
        </div>
        <div class="input-form">
            <label for="userEmail">Email</label>
            <input asp-for="newUserInput.UserEmail" type="text" />
            <span asp-validation-for="newUserInput.UserEmail" class="dangerText"></span>
        </div>
        <div class="input-form">
            <label for="pwd">Password</label>
            <input  asp-for="newUserInput.UserPassword" id="pwd" type="password" />
            <span asp-validation-for="newUserInput.UserPassword" class="dangerText"></span>
        </div>
        <div >
            <button class="primaryButton" type="submit">Sign In</button>
        </div>
        @if (!ModelState.IsValid) {
            <span class="dangerText">@Html.ValidationSummary(true)</span>
        }
    </form>
    <div class="loginFooter">
        <p>Don't have an account?</p>
        <p>Register <a href="/Identity/Account/register">here</a></p>
        <a href="/">Back to Tasty Bits</a>
    </div>
</div>