<div class="flex boder border-solid border-2 h-32 justify-center items-center">
    <div class="flex-col text-center">
       <div id="title">
           <h2>@CardTitle</h2>
       </div>
       <div id="cardBody">
            @CardBodyIconSvg
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" 
            viewBox="0 0 24 24" stroke-width="1.5" 
            stroke="currentColor" class="w-12 h-12">
                <path stroke-linecap="round" stroke-linejoin="round" 
                d="M15.75 15.75l-2.489-2.489m0 0a3.375 3.375 0 10-4.773-4.773 3.375 3.375 0 004.774 4.774zM21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
       </div>
       <div id="cardFooter">
           @CardFooterContent
       </div>
    </div>
</div>
@code {
    [Parameter]
    public string CardTitle { get; set; } = "Naslov";

    [Parameter]
    public MarkupString CardBodyIconSvg { get; set; }
    [Parameter]
    public string CardFooterContent { get; set; } = "CardFooter";
}
