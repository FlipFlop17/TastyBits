<div class="flex flex-col border-2 h-96 
justify-center drop-shadow-md bg-gray-50 grow p-10
@AddClass">
    <div class="flex-col text-center">
        <div id="title" class="text-4xl space-y-7 text-center text-emerald-900 font-semibold h-24">
           <h1>@CardTitle</h1>
       </div>
        <div id="cardBody" class="mt-3 flex justify-center">
            <img class="text-center" src="@CardBodyImgPath" width="150" height="150"/>
       </div>
       <div id="cardFooter" class="text-2xl text-emerald-800 mt-5">
           @CardFooterContent
       </div>
    </div>
</div>
@code {
    [Parameter]
    public string? AddClass { get; set; }
    [Parameter]
    public string CardTitle { get; set; } = "Naslov";
    [Parameter]
    public string CardBodyImgPath { get; set; } = "#";
    [Parameter]
    public string CardFooterContent { get; set; } = "CardFooter";
}
